<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="450dp"
        android:layout_height="105dp"
        android:layout_marginBottom="660dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/categoria_background" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="81dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat"
        android:text="Perfil"
        android:textColor="#E6E6E6"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_imagen_perfil"
        android:layout_width="167dp"
        android:layout_height="156dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_baseline_person_pin_24"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/tv_nombre_usuario_perfil"
        android:layout_width="197dp"
        android:layout_height="44dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="97dp"
        android:fontFamily="@font/montserrat"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_imagen_perfil" />

    <TextView
        android:id="@+id/tv_nombre_perfil"
        android:layout_width="143dp"
        android:layout_height="27dp"
        android:layout_marginStart="157dp"
        android:layout_marginEnd="157dp"
        android:fontFamily="@font/montserrat"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_usuario_perfil" />

    <TextView
        android:id="@+id/tv_correo_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_nombre_perfil"
        app:layout_constraintStart_toStartOf="@+id/tv_nombre_perfil"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_perfil" />

    <Button
        android:id="@+id/btn_cerrar_sesion_perfil"
        android:layout_width="196dp"
        android:layout_height="58dp"
        android:layout_marginTop="228dp"
        android:fontFamily="@font/montserrat"
        android:text="Cerrar Sesión"
        app:layout_constraintEnd_toEndOf="@+id/tv_correo_perfil"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/tv_correo_perfil"
        app:layout_constraintTop_toBottomOf="@+id/tv_correo_perfil" />

    <Button
        android:id="@+id/btn_guardar_img_perfil"
        android:layout_width="139dp"
        android:layout_height="38dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="150dp"
        android:text="Guardar imagen"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_imagen_perfil" />

    <Button
        android:id="@+id/btn_aceptar_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:fontFamily="@font/montserrat"
        android:text="Aceptar"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_cerrar_sesion_perfil"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/btn_cerrar_sesion_perfil"
        app:layout_constraintTop_toBottomOf="@+id/tv_correo_perfil" />

    <ImageView
        android:id="@+id/iv_ingresar_direccion"
        android:layout_width="116dp"
        android:layout_height="109dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_nombre_usuario_perfil"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/tv_nombre_usuario_perfil"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_perfil"
        app:srcCompat="@drawable/map_icon" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Ingresar dirección de domicilio"
        android:textAlignment="textStart"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_ingresar_direccion"
        app:layout_constraintStart_toStartOf="@+id/iv_ingresar_direccion"
        app:layout_constraintTop_toBottomOf="@+id/iv_ingresar_direccion" />

</androidx.constraintlayout.widget.ConstraintLayout>